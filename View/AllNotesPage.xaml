<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:SNotes.ViewModel"
             x:Class="SNotes.View.AllNotesPage"
             Title="Notes">

    <ContentPage.BindingContext>
        <viewModels:AllNotesViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" 
                     Command="{Binding NewCommand}" 
                     IconImageSource="{FontImageSource Glyph='+', Color={AppThemeBinding Light=Black, Dark=White}, Size=22}" />
    </ContentPage.ToolbarItems>

    <CollectionView x:Name="notesCollection"
                    ItemsSource="{Binding AllNotes}"
                    Margin="10">

        <CollectionView.ItemsLayout>
            <LinearItemsLayout Orientation="Vertical" ItemSpacing="5" />
        </CollectionView.ItemsLayout>

        <CollectionView.ItemTemplate>
            <DataTemplate>

                <SwipeView Threshold="100">

                    <SwipeView.LeftItems>
                        <SwipeItems Mode="Execute">
                            <SwipeItemView Command="{Binding DeleteCommand}">
                                <Grid WidthRequest="70" BackgroundColor="#FF3B30">
                                    <Image Source="{FontImageSource Glyph='🗑', Size=24, Color=White}"
                                           HorizontalOptions="Center" 
                                           VerticalOptions="Center"/>
                                </Grid>
                            </SwipeItemView>
                        </SwipeItems>
                    </SwipeView.LeftItems>

                    <Grid Padding="10" BackgroundColor="Transparent">

                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding EditCommand}"/>
                        </Grid.GestureRecognizers>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0"
                               Text="{Binding Title}" 
                               FontAttributes="Bold" 
                               FontSize="16" 
                               VerticalOptions="Start"/>

                        <Label Grid.Row="1"
                               Text="{Binding Date}" 
                               FontAttributes="Italic" 
                               FontSize="12" 
                               TextColor="Gray"
                               VerticalOptions="End"/>

                    </Grid>
                </SwipeView>

            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>